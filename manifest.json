{
    "manifest_version": 2,
    "name": "Netflix-Steroids",
    "version": "0.1",
    "author": "Juan P. Chavat (jupach *at* gmail *dot* com)",
    "description": "Add a trailer link to your Netflix account.",
    "homepage_url": "https://github.com/jpchavat/netflix-steroids",
    "content_scripts": [
        {
            "matches": [
                "https://www.netflix.com/*"
            ],
            "js": [
                "api_key.js",
                "utils.js",
                "config.js",
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "64": "icons/64.png"
    },
    "permissions": [
        "*://www.imdb.com/*",
        "https://www.netflix.com/*",
        "https://api.themoviedb.org/3/*"
    ]
}